{
  "name": "@busymango/server",
  "scripts": {
    "dev": "dotenvx run -- tsx watch src/run.ts",
    "dev:zeabur": "dotenvx run -f .env.zeabur.dev -- tsx watch src/run.ts",
    "test": "dotenvx run -- tsx --test $(find test -type f -name '*.spec.ts')",
    "format": "biome check --write . && biome format --write --colors=force --verbose .",
    "drizzle:generate": "tsx scripts/@drizzle.ts -c generate",
    "drizzle:migrate": "tsx scripts/@drizzle.ts -c migrate",
    "env:encrypt": "tsx scripts/@encrypt.ts",
    "env:audit": "tsx scripts/@audit.ts",
    "prepare": "husky"
  },
  "type": "module",
  "dependencies": {
    "@busymango/fetch-driver": "^0.5.0",
    "@hono/node-server": "^1.14.0",
    "ansis": "^3.17.0",
    "cron": "^4.1.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "googleapis": "^144.0.0",
    "hono": "^4.7.5",
    "ioredis": "^5.6.0",
    "mime": "^4.0.6",
    "nanoid": "^5.1.3",
    "otplib": "^12.0.1",
    "remeda": "^2.21.1",
    "resend": "^4.2.0",
    "uuid": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@dotenvx/dotenvx": "^1.33.0",
    "@types/node": "^20.12.2",
    "commander": "^13.1.0",
    "drizzle-kit": "^0.30.6",
    "drizzle-seed": "^0.3.1",
    "husky": "^9.1.7",
    "tsx": "^4.19.3",
    "type-fest": "^4.37.0",
    "typescript": "^5.8.2"
  }
}
